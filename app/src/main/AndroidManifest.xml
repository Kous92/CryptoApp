<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cryptoapp.example.cryptoapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission-group.LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/btc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".CryptoService" />

        <activity android:name=".Dollar" />
        <activity android:name=".Euro" />
        <activity android:name=".BTC" />
    </application>

</manifest>